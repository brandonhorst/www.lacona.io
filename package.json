{
  "name": "www.lacona.io",
  "version": "0.1.2",
  "description": "Lacona App",
  "main": "index.js",
  "scripts": {
    "build:html": "babel-node render.jsx",
    "build:style": "node-sass front/style.scss public/style.css --output-style compressed",
    "build:script": "mkdir -p tmp && browserify front/script.jsx -t babelify -g browserify-shim -o public/script.js",
    "build:vendor": "cp node_modules/moment/min/moment.min.js public & cp node_modules/react/dist/react.min.js public",
    "build": "npm run build:html & npm run build:vendor & npm run build:style & npm run build:script & wait",
    "open": "open public/index.html",
    "watch": "watchify --extension=.jsx --transform babelify -g browserify-shim front/script.jsx -o public/script.js"
  },
  "dependencies": {
    "elliptical": "^1.0.0-rc10",
    "elliptical-extend": "^1.0.0-rc5",
    "elliptical-observe": "^1.0.0-rc6",
    "elliptical-wormhole": "^1.0.0-rc2",
    "lacona-command": "^0.2.2",
    "lacona-communicate": "^0.1.2",
    "lacona-events": "^0.1.1",
    "lacona-finder": "0.0.3",
    "lacona-itunes": "0.0.2",
    "lacona-osx": "0.0.3",
    "lacona-phrases": "0.0.2",
    "lacona-search-internet": "^0.1.1",
    "lacona-settings": "0.0.3",
    "lacona-translate": "^0.1.0",
    "lodash": "^4.9.0",
    "moment": "^2.12.0",
    "moment-duration-format": "^1.3.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-lacona": "^0.5.4",
    "rxjs": "^5.0.0-beta.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/heroku/node-js-getting-started"
  },
  "keywords": [
    "lacona"
  ],
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-plugin-transform-react-jsx": "^6.7.5",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "browserify-shim": "^3.8.12",
    "node-sass": "^3.4.2",
    "rimraf": "^2.5.2",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  },
  "browserify-shim": {
    "moment": {
      "exports": "global:moment"
    },
    "lodash": {
      "exports": "global:_"
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-react-jsx"
    ]
  }
}
